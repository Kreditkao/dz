#include <iostream>
using namespace std;

int main() {
    double num1, num2;
    char operation;

    cout << "First number ";
    cin >> num1;

    cout << "Second number ";
    cin >> num2;

    cout << "Select an operation (+, -, *, /): ";
    cin >> operation;

    switch (operation) {
    case '+':
        cout << num1 << " + " << num2 << " = " << num1 + num2 << endl;
        break;
    case '-':
        cout << num1 << " - " << num2 << " = " << num1 - num2 << endl;
        break;
    case '*':
        cout << num1 << " * " << num2 << " = " << num1 * num2 << endl;
        break;
    case '/':
        cout << num1 << " / " << num2 << " = " << num1 / num2 << endl;
        break;
    default:
        cout << "Eror" << endl;
    }

    return 0;
}
